<% provide(:title, 'Edit User') %>

<h1>Update your profile</h1>

<hr>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "確認用パスワード" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "保存", class: "btn btn-large btn-primary" %>
    <% end %>

    <hr>

    <a href="http://gravatar.com/emails" target="_blank"><%= gravatar_for @user, size: 75 %> change</a>
  </div>
</div>
