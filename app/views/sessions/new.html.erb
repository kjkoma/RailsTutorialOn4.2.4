<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, :value => @input_email, placeholder: "登録済のメールアドレスを入力してください。" %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <br>
    <p><%= link_to "新規アカウント登録", signup_path %></p>
  </div>
</div>