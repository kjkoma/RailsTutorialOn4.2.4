<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span id="micropost_form_input_count"></span>
  <div class="field">
    <%= f.text_area :content, placeholder: "新しい投稿を入力してください。", rows: 4 %>
  </div>
  <%= f.submit "送信", class: "btn btn-large btn-primary" %>
 <% end %>