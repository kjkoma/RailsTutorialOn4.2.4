<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert bg-danger">
      入力した内容に <%# pluralize(@user.errors.count, "error") %><%= @user.errors.count %> つのエラーがあります。
    </div>
    <ul>
      <% @user.errors.full_messages.each do | msg | %>
        <li>* <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
